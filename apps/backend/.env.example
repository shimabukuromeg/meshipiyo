# Database
DATABASE_URL="postgresql://postgres:password@localhost:55432/meshipiyo?schema=public"

# Firebase Admin SDK (Backend)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Emulator設定（開発環境用）
# NODE_ENV=developmentかつこの環境変数が設定されている場合、Emulatorを使用
# Docker環境: firebase-emulator:9099, ローカル環境: 127.0.0.1:9099
FIREBASE_AUTH_EMULATOR_HOST=firebase-emulator:9099

# 開発環境設定
NODE_ENV=development