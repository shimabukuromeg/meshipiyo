{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "test": "vitest",
    "dev": "cross-env NODE_ENV=development ts-node-dev --exit-child --respawn src/main.ts",
    "start": "node dist/src/main.js",
    "build": "prisma generate && rm -rf ./dist && tsc && cp -r ./prisma/* ./dist/prisma",
    "typecheck": "tsc --noEmit",
    "codegen:gql": "graphql-codegen --config ./codegen.ts",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:pull": "prisma db pull",
    "db:init": "prisma migrate reset -f && pnpm ageage:scrape",
    "db:init:all": "prisma migrate reset -f && pnpm ageage:scrape all",
    "codegen:prisma": "prisma generate",
    "codegen:microcms": "microcms_sdk_generator src/micro-cms-schemas src/micro-cms-schemas/generated.ts",
    "codegen": "pnpm run codegen:prisma && pnpm run codegen:gql",
    "ageage:scrape": "ts-node src/scripts/ageage-collector/index.ts",
    "lint": "biome lint --write .",
    "format": "biome check --write .",
    "ci": "biome ci"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@eddeee888/gcg-typescript-resolver-files": "0.13.0",
    "@graphql-codegen/cli": "5.0.7",
    "@types/node": "22.15.3",
    "@vitest/ui": "3.1.2",
    "cross-env": "7.0.3",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  },
  "dependencies": {
    "@graphql-tools/schema": "10.0.25",
    "@prisma/client": "6.7.0",
    "@types/uuid": "10.0.0",
    "cheerio": "1.0.0",
    "fastify": "5.6.1",
    "firebase-admin": "13.4.0",
    "graphql": "16.11.0",
    "graphql-middleware": "6.1.35",
    "graphql-scalars": "1.24.2",
    "graphql-yoga": "5.16.0",
    "microcms_sdk_generator": "0.1.1",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "prisma": "6.7.0",
    "uuid": "11.1.0",
    "zod": "3.24.3"
  }
}
