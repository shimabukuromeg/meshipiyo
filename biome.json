{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/.next/**",
      "!**/generated/**",
      "!**/*.generated.*",
      "!**/generated.ts",
      "!**/src/gql/**"
    ]
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  },

  "assist": { "actions": { "source": { "organizeImports": "on" } } },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "error",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noDebugger": "off",
        "noUnknownAtRules": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  },

  "json": {
    "formatter": {}
  }
}
